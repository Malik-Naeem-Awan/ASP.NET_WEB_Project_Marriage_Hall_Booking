                    <form action="#" onsubmit="return validation()">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="input-group">
                                    <input type="text" placeholder="Full Name" class="bg-light" name="user"
                                           class="form-control" id="user" autocomplete="off">
                                    <span style="margin-top: 10px;" id="username" class="text-danger font-weight-bold"> </span>
