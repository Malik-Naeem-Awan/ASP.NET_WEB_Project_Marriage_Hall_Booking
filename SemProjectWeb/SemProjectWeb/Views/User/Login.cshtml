@model SemProjectWeb.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Home/null_layout2.cshtml";
}


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-t-90 p-b-30">
            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
            <div class="login100-form validate-form">
                <span class="login100-form-title p-b-40">
                    Login
                </span>

                <div>
                    <a href="#" class="btn-login-with bg1 m-b-10">
                        <i class="fa fa-facebook-official"></i>
                        Login with Facebook
                    </a>

                    <a href="#" class="btn-login-with bg2">
                        <i class="fa fa-twitter"></i>
                        Login with Twitter
                    </a>
                </div>

                <div class="text-center p-t-55 p-b-30">
                    <span class="txt1">
                        Login with email
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-16 form-group" data-validate="Please enter email: ex@abc.xyz">
                    @Html.EditorFor(model => model.UserEmail, new
               {
                   htmlAttributes = new
                   {
                       @class = "input100",
                       type = "text",
                       id = "email",
                       placeholder = "Your Email"
                   }
               })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="Please enter password">

                    <span class="btn-show-pass">
                        <i class="fa fa fa-eye"></i>
                    </span>

                    @Html.EditorFor(model => model.Password, new
                                                            {
                                                                htmlAttributes = new
                                                           {
                                                               @class = "input100",
                                                               type = "password",
                                                               placeholder = "Password"
                                                           }
                                                       })

                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn form-group">
                    <button class="login100-form-btn form-submit" type="submit" id="submit">
                        Login
                    </button>
                </div>
                <div class="flex-col-c p-t-224">
                    <span class="txt2 p-b-10">
                        Don’t have an account?
                    </span>

                    <a href="#" class="txt3 bo1 hov1">

                        @Html.ActionLink("Sign up now", "Registeration", "User")
                    </a>
                </div>
            </div>
            }
            </div>
             </div>
    </div>

